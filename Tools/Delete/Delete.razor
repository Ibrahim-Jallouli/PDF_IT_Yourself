@page "/delete"
@using Microsoft.AspNetCore.Components.Forms
@inject PDF_IT_Yourself.Core.PdfDocumentLoader Loader
@inject PDF_IT_Yourself.Tools.Delete.DeleteTool DeleteTool

<h3>Delete Pages</h3>

<div class="mb-3">
    <label class="form-label">Choisir un PDF</label>
    <InputFile OnChange="OnFileSelected" accept="application/pdf" />
</div>

@if (_pdfLoaded)
{
    <div class="mb-3">
        <div class="text-muted">Pages détectées : @_pageCount</div>
    </div>

    <div class="mb-3">
        <label class="form-label">Pages à supprimer</label>
        <input class="form-control" placeholder="Ex: 1,3,5 ou 2-6"
               @bind="_pagesInput" />
        <div class="form-text">
            Format: liste séparée par virgules et plages (ex: 1,3,5, 2-6)
        </div>
    </div>

    <button class="btn btn-danger" @onclick="DeletePages" disabled="@_isBusy">
        @(_isBusy ? "Suppression..." : "Supprimer & Télécharger")
    </button>

    @if (!string.IsNullOrWhiteSpace(_error))
    {
        <div class="alert alert-danger mt-3">@_error</div>
    }
}
else
{
    <div class="text-muted">Charge un PDF pour commencer.</div>
}

@code {
    private byte[]? _pdfBytes;
    private int _pageCount;
    private bool _pdfLoaded;
    private bool _isBusy;

    private string _pagesInput = "";
    private string _error = "";

    private async Task OnFileSelected(InputFileChangeEventArgs e)
    {
        _error = "";
        _pdfLoaded = false;
        _pdfBytes = null;
        _pageCount = 0;

        var file = e.File;
        if (file is null) return;

        using var stream = file.OpenReadStream(maxAllowedSize: 50 * 1024 * 1024); // 50MB
        using var ms = new MemoryStream();
        await stream.CopyToAsync(ms);
        _pdfBytes = ms.ToArray();

        // vraie validation + page count
        _pageCount = await Loader.GetValidatedPageCountAsync(_pdfBytes);
        _pdfLoaded = true;
    }

    private async Task DeletePages()
    {
        _error = "";
        if (_pdfBytes is null || _pageCount <= 0)
        {
            _error = "Aucun PDF chargé.";
            return;
        }

        int[] pages;
        try
        {
            pages = ParsePages(_pagesInput, _pageCount);
        }
        catch (Exception ex)
        {
            _error = ex.Message;
            return;
        }

        _isBusy = true;
        try
        {
            await DeleteTool.DeleteAndDownloadAsync(_pdfBytes, pages, "deleted.pdf");
        }
        catch (Exception ex)
        {
            _error = $"Erreur pendant la suppression: {ex.Message}";
        }
        finally
        {
            _isBusy = false;
        }
    }

    // Supporte: "1,3,5" et "2-6" et mix: "1,3, 5-7"
    private static int[] ParsePages(string input, int maxPage)
    {
        if (string.IsNullOrWhiteSpace(input))
            throw new Exception("Entre des pages à supprimer (ex: 1,3,5 ou 2-6).");

        input = input.Replace(" ", "");

        var set = new SortedSet<int>();
        var parts = input.Split(',', StringSplitOptions.RemoveEmptyEntries);

        foreach (var part in parts)
        {
            if (part.Contains('-'))
            {
                var range = part.Split('-', StringSplitOptions.RemoveEmptyEntries);
                if (range.Length != 2)
                    throw new Exception($"Plage invalide: '{part}'");

                if (!int.TryParse(range[0], out var start) || !int.TryParse(range[1], out var end))
                    throw new Exception($"Plage invalide: '{part}'");

                if (start <= 0 || end <= 0 || start > maxPage || end > maxPage)
                    throw new Exception($"Pages hors limites (1 - {maxPage}) dans '{part}'");

                if (end < start) (start, end) = (end, start);

                for (int p = start; p <= end; p++)
                    set.Add(p);
            }
            else
            {
                if (!int.TryParse(part, out var p))
                    throw new Exception($"Page invalide: '{part}'");

                if (p <= 0 || p > maxPage)
                    throw new Exception($"Page hors limites (1 - {maxPage}): {p}");

                set.Add(p);
            }
        }

        if (set.Count == 0)
            throw new Exception("Aucune page valide trouvée.");

        // Bonus: si user supprime toutes les pages, on prévient
        if (set.Count == maxPage)
            throw new Exception("Tu as sélectionné toutes les pages. Le PDF résultat serait vide.");

        return set.ToArray();
    }
}