<div class="card h-100 shadow-sm border-0">
    <div class="card-body d-flex flex-column">
        <div class="d-flex align-items-start justify-content-between">
            <div>
                <h5 class="card-title mb-1">@Title</h5>
                <p class="card-text text-secondary mb-0">@Description</p>
            </div>
            @if (!string.IsNullOrWhiteSpace(Badge))
            {
                <span class="badge text-bg-light border">@Badge</span>
            }
        </div>

        <div class="mt-3 d-flex gap-2">
            <a class="btn btn-dark btn-sm" href="@Url">@ButtonText</a>
            @if (!string.IsNullOrWhiteSpace(SecondaryUrl))
            {
                <a class="btn btn-outline-secondary btn-sm" href="@SecondaryUrl">@SecondaryText</a>
            }
        </div>
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; } = "";
    [Parameter] public string Description { get; set; } = "";
    [Parameter] public string Url { get; set; } = "";
    [Parameter] public string ButtonText { get; set; } = "Use tool";

    [Parameter] public string? Badge { get; set; }

    [Parameter] public string? SecondaryUrl { get; set; }
    [Parameter] public string SecondaryText { get; set; } = "Details";
}