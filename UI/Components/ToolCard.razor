<div class="card toolcard h-100">
    <div class="card-body d-flex flex-column gap-3">

        <div class="d-flex align-items-start justify-content-between gap-3">
            <div class="d-flex align-items-start gap-3">

                @if (!string.IsNullOrWhiteSpace(Icon))
                {
                    <div class="toolcard-icon">
                        <i class="@Icon" aria-hidden="true"></i>
                    </div>
                }

                <div>
                    <div class="d-flex align-items-center gap-2 flex-wrap">
                        <h5 class="card-title mb-0 fw-semibold">@Title</h5>

                        @if (!string.IsNullOrWhiteSpace(Badge))
                        {
                            <span class="badge toolcard-badge">@Badge</span>
                        }
                    </div>

                    <p class="card-text text-secondary mb-0 mt-1">@Description</p>
                </div>
            </div>
        </div>

        <div class="mt-auto d-flex gap-2">
            <a class="btn btn-primary btn-sm px-3" href="@Url">@ButtonText</a>

            @if (!string.IsNullOrWhiteSpace(SecondaryUrl))
            {
                <a class="btn btn-outline-secondary btn-sm px-3" href="@SecondaryUrl">@SecondaryText</a>
            }
        </div>
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; } = "";
    [Parameter] public string Description { get; set; } = "";
    [Parameter] public string Url { get; set; } = "";
    [Parameter] public string ButtonText { get; set; } = "Use tool";
    [Parameter] public string? Badge { get; set; }
    [Parameter] public string? SecondaryUrl { get; set; }
    [Parameter] public string SecondaryText { get; set; } = "Details";
    [Parameter] public string? Icon { get; set; }
}