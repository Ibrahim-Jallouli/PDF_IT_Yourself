@page "/page-numbers"
@using Microsoft.AspNetCore.Components.Forms
@inject PDF_IT_Yourself.Services.PdfDocumentLoader Loader
@inject PDF_IT_Yourself.Tools.PageNumbers.PageNumbersTool PageNumbers
@inject IJSRuntime JS

<div class="app-bg">
    <div class="container py-4 ">

        <!-- Header -->
        <div class="tool-header mb-4">
            <div>
                <h1 class="h3 fw-bold mb-1">Add page numbers</h1>
                <div class="text-secondary">Add numbering to all pages — 100% local, no upload.</div>
            </div>
        </div>

        <div class="row g-4 align-items-start">
            <!-- LEFT -->
            <div class="col-12 col-lg-4">
                <div class="card-surface tool-left">

                    <div class="section-title">1) Choose a PDF</div>

                    <!-- Dropzone -->
                    <div class="dropzone-wrap mb-3">
                        <label class="dropzone dropzone-pagenumbers @( _dragOver ? "is-dragover" : "" )"
                               @ondragenter="OnDragEnter"
                               @ondragleave="OnDragLeave"
                               @ondragover="OnDragOver"
                               @ondragover:preventDefault
                               @ondrop="OnDrop"
                               @ondrop:preventDefault>

                            <div class="dz-icon">📄</div>
                            <div class="dz-text">
                                <div class="fw-semibold">Drag & drop your PDF here</div>
                                <div class="text-secondary small">or click to select (PDF, max 50MB)</div>
                            </div>

                            <InputFile id="pdfInput"
                                       class="dz-input"
                                       OnChange="OnFileSelected"
                                       accept="application/pdf" />
                        </label>

                        @if (_pdfLoaded)
                        {
                            <div class="file-pill mt-2">
                                <span class="me-2">✅</span>
                                <span class="text-truncate">@(_fileName ?? "PDF loaded")</span>
                            </div>
                        }
                    </div>

                    <div class="section-title">2) Settings</div>

                    @if (_pdfLoaded)
                    {
                        <div class="meta-grid mb-3">
                            <div class="meta-item">
                                <div class="meta-label">Pages</div>
                                <div class="meta-value">@_pageCount</div>
                            </div>
                            <div class="meta-item">
                                <div class="meta-label">Opacity</div>
                                <div class="meta-value">@($"{_opacity:0.##}")</div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label mb-1">Template</label>
                            <input class="form-control"
                                   placeholder="Page {n} / {total}"
                                   @bind="_template"
                                   @bind:event="oninput"
                                   disabled="@_isBusy" />
                            <div class="form-text">
                                Use <code>{n}</code> and <code>{total}</code>. Example: <code>Page {n} / {total}</code>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label mb-1">Position</label>
                            <select class="form-select" @bind="_position" disabled="@_isBusy">
                                <option value="bottom-right">bottom-right</option>
                                <option value="bottom-center">bottom-center</option>
                                <option value="bottom-left">bottom-left</option>
                                <option value="top-right">top-right</option>
                                <option value="top-center">top-center</option>
                                <option value="top-left">top-left</option>
                            </select>
                        </div>

                        <div class="row g-2 mb-3">
                            <div class="col-6">
                                <label class="form-label mb-1">Font size</label>
                                <input type="number"
                                       class="form-control"
                                       @bind="_fontSize"
                                       @bind:event="oninput"
                                       disabled="@_isBusy"
                                       min="6"
                                       max="96" />
                            </div>
                            <div class="col-6">
                                <label class="form-label mb-1">Opacity</label>
                                <input type="number"
                                       step="0.05"
                                       class="form-control"
                                       @bind="_opacity"
                                       @bind:event="oninput"
                                       disabled="@_isBusy"
                                       min="0.05"
                                       max="1" />
                                <div class="form-text">Between 0.05 and 1.0</div>
                            </div>
                        </div>

                        <div class="actions">
                            <button class="btn btn-primary w-100"
                                    @onclick="HandleAddPageNumbersAsync"
                                    disabled="@(_isBusy || !_pdfLoaded)">
                                @(_isBusy ? "Processing..." : "Add Page Numbers & Download")
                            </button>

                            <div class="hint text-secondary small mt-2">
                                Tip: <code>{n}</code> = current page, <code>{total}</code> = total pages.
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="empty-left text-secondary small">
                            Upload a PDF to enable preview and settings.
                        </div>
                    }

                    @if (!string.IsNullOrWhiteSpace(_error))
                    {
                        <div class="alert alert-danger mt-3 mb-0">@_error</div>
                    }
                </div>
            </div>

            <!-- RIGHT -->
            <div class="col-12 col-lg-8">
                <div class="card-surface">
                    <div class="preview-header">
                        <div class="section-title mb-0">3) Preview</div>
                    </div>

                    @if (_pdfLoaded)
                    {
                        <div class="preview-scroll">
                            <PageNumbersBlankPreview Template="@(
                                                     string.IsNullOrWhiteSpace(_template)
                                                         ? "Page {n} / {total}"
                                                         : _template)"
                                                 Position="@_position"
                                                 FontSize="@_fontSize"
                                                 Opacity="@_opacity"
                                                 PageNumber="1"
                                                 TotalPages="@(Math.Max(1, _pageCount))" />
                    </div>
                                        }
                    else
                    {
                        <div class="empty-preview text-secondary">
                            The preview will appear here after upload.
                        </div>
                    }
                </div>
            </div>
        </div>

    </div>
</div>

@code {
    private byte[]? _pdfBytes;
    private int _pageCount;
    private bool _pdfLoaded;
    private bool _isBusy;

    private string _error = "";

    private string _template = "Page {n} / {total}";
    private string _position = "bottom-center";
    private int _fontSize = 12;
    private double _opacity = 0.9;

    // UI
    private bool _dragOver;
    private string? _fileName;

    private void OnDragEnter(DragEventArgs e) => _dragOver = true;
    private void OnDragOver(DragEventArgs e) => _dragOver = true;
    private void OnDragLeave(DragEventArgs e) => _dragOver = false;

    private void OnDrop(DragEventArgs e)
    {
        _dragOver = false;
        StateHasChanged();
    }

    private async Task OnFileSelected(InputFileChangeEventArgs e)
    {
        _error = "";
        _pdfLoaded = false;
        _isBusy = false;

        _pdfBytes = null;
        _pageCount = 0;
        _fileName = null;

        var file = e.File;
        if (file is null) return;

        try
        {
            _fileName = file.Name;

            using var stream = file.OpenReadStream(maxAllowedSize: 50 * 1024 * 1024);
            using var ms = new MemoryStream();
            await stream.CopyToAsync(ms);
            _pdfBytes = ms.ToArray();

            _pageCount = await Loader.GetValidatedPageCountAsync(_pdfBytes);
            _pdfLoaded = true;
        }
        catch (Exception ex)
        {
            _error = $"Erreur chargement PDF : {ex.Message}";
            _pdfLoaded = false;
            _pdfBytes = null;
            _pageCount = 0;
        }
    }

    private async Task HandleAddPageNumbersAsync()
    {
        _error = "";

        if (_pdfBytes is null || !_pdfLoaded)
        {
            _error = "Aucun PDF chargé.";
            return;
        }

        if (_opacity < 0.05 || _opacity > 1)
        {
            _error = "Opacity doit être entre 0.05 et 1.0.";
            return;
        }

        if (string.IsNullOrWhiteSpace(_template))
        {
            _error = "Template vide.";
            return;
        }

        _isBusy = true;
        try
        {
            await PageNumbers.AddPageNumbersAndDownloadAsync(
                _pdfBytes,
                _template,
                _position,
                _fontSize,
                _opacity
            );
        }
        catch (Exception ex)
        {
            _error = $"Erreur: {ex.Message}";
        }
        finally
        {
            _isBusy = false;
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("pdfDrop.wireDropZone", ".dropzone-pagenumbers", "pdfInput");
        }
    }
}