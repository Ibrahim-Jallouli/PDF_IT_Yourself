@page "/reorder"
@using Microsoft.AspNetCore.Components.Forms
@inject PDF_IT_Yourself.Services.PdfDocumentLoader Loader
@inject PDF_IT_Yourself.Tools.Reorder.ReorderTool ReorderTool
@inject IJSRuntime JS

<div class="app-bg">
    <div class="container py-4">

        <!-- Header -->
        <div class="tool-header mb-4">
            <div>
                <h1 class="h3 fw-bold mb-1">Reorder pages</h1>
                <div class="text-secondary">Reorder pages in a PDF — 100% local, no upload.</div>
            </div>
        </div>

        <div class="row g-4 align-items-start">
            <!-- LEFT -->
            <div class="col-12 col-lg-4">
                <div class="card-surface tool-left">

                    <div class="section-title">1) Choose a PDF</div>

                    <!-- Dropzone -->
                    <div class="dropzone-wrap mb-3">
                        <label class="dropzone dropzone-reorder @( _dragOver ? "is-dragover" : "" )"
                               @ondragenter="OnDragEnter"
                               @ondragleave="OnDragLeave"
                               @ondragover="OnDragOver"
                               @ondragover:preventDefault
                               @ondrop="OnDrop"
                               @ondrop:preventDefault>

                            <div class="dz-icon">📄</div>
                            <div class="dz-text">
                                <div class="fw-semibold">Drag & drop your PDF here</div>
                                <div class="text-secondary small">or click to select (PDF, max 50MB)</div>
                            </div>

                            <InputFile id="pdfInput"
                                       class="dz-input"
                                       OnChange="OnFileSelected"
                                       accept="application/pdf" />
                        </label>

                        @if (_pdfLoaded)
                        {
                            <div class="file-pill mt-2">
                                <span class="me-2">✅</span>
                                <span class="text-truncate">@(_fileName ?? "PDF loaded")</span>
                            </div>
                        }
                    </div>

                    <div class="section-title">2) New order</div>

                    @if (_pdfLoaded)
                    {
                        <div class="meta-grid mb-3">
                            <div class="meta-item">
                                <div class="meta-label">Pages detected</div>
                                <div class="meta-value">@_pageCount</div>
                            </div>
                            <div class="meta-item">
                                <div class="meta-label">Format</div>
                                <div class="meta-value">CSV</div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label mb-1">Page order</label>

                            <div class="input-group">
                                <input class="form-control"
                                       placeholder="Example: 3,1,2,4"
                                       @bind="_orderInput"
                                       @bind:event="oninput"
                                       disabled="@_isBusy" />
                                <button class="btn btn-outline-secondary"
                                        type="button"
                                        @onclick="ResetOrder"
                                        disabled="@_isBusy">
                                    Reset
                                </button>
                            </div>

                            <div class="form-text">
                                Provide the complete order (1..@_pageCount), separated by commas.
                                Example: 3,1,2,4
                            </div>
                        </div>

                        <div class="actions">
                            <button class="btn btn-primary w-100"
                                    @onclick="ApplyReorder"
                                    disabled="@(_isBusy || string.IsNullOrWhiteSpace(_orderInput))">
                                @(_isBusy ? "Reordering..." : "Reorder & Download")
                            </button>

                            <div class="hint text-secondary small mt-2">
                                Tip: check the page numbers on the right (Page 1..N) and then enter the order here.
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="empty-left text-secondary small">
                            Upload a PDF to display the preview and enable reordering.
                        </div>
                    }

                    @if (!string.IsNullOrWhiteSpace(_error))
                    {
                        <div class="alert alert-danger mt-3 mb-0">@_error</div>
                    }
                </div>
            </div>

            <!-- RIGHT -->
            <div class="col-12 col-lg-8">
                <div class="card-surface">

                    <div class="preview-header">
                        <div class="section-title mb-0">3) Preview</div>
                    </div>

                    @if (_pdfLoaded)
                    {
                        <div class="preview-scroll">
                            <PagePicker @key="_pickerKey"
                                        PdfBytes="_pdfBytes"
                                        PageCount="_pageCount"
                                        IsBusy="true"
                                        SelectedPages1Based="Array.Empty<int>()"
                                        SelectedPages1BasedChanged="OnNoopSelectedPagesChanged" />
                        </div>
                    }
                    else
                    {
                        <div class="empty-preview text-secondary">
                            The page preview will appear here after upload.
                        </div>
                    }
                </div>
            </div>
        </div>

    </div>
</div>
@code {
    private byte[]? _pdfBytes;
    private int _pageCount;
    private bool _pdfLoaded;
    private bool _isBusy;

    private string _orderInput = "";
    private string _error = "";

    private string _pickerKey = Guid.NewGuid().ToString("N");

    // UI
    private bool _dragOver;
    private string? _fileName;

    private void OnDragEnter(DragEventArgs e) => _dragOver = true;
    private void OnDragOver(DragEventArgs e) => _dragOver = true;
    private void OnDragLeave(DragEventArgs e) => _dragOver = false;

    private void OnDrop(DragEventArgs e)
    {
        _dragOver = false;
        StateHasChanged();
    }

    private async Task OnFileSelected(InputFileChangeEventArgs e)
    {
        _error = "";
        _pdfLoaded = false;
        _isBusy = false;

        _pdfBytes = null;
        _pageCount = 0;
        _orderInput = "";
        _fileName = null;

        _pickerKey = Guid.NewGuid().ToString("N");

        var file = e.File;
        if (file is null) return;

        try
        {
            _fileName = file.Name;

            using var stream = file.OpenReadStream(maxAllowedSize: 50 * 1024 * 1024);
            using var ms = new MemoryStream();
            await stream.CopyToAsync(ms);
            _pdfBytes = ms.ToArray();

            _pageCount = await Loader.GetValidatedPageCountAsync(_pdfBytes);
            _pdfLoaded = true;

            _orderInput = string.Join(",", Enumerable.Range(1, _pageCount));
        }
        catch (Exception ex)
        {
            _error = $"Erreur chargement PDF : {ex.Message}";
            _pdfLoaded = false;
            _pdfBytes = null;
            _pageCount = 0;
        }
    }

    private void ResetOrder()
    {
        if (_pageCount <= 0) return;
        _orderInput = string.Join(",", Enumerable.Range(1, _pageCount));
        _error = "";
    }

    private async Task ApplyReorder()
    {
        _error = "";

        if (_pdfBytes is null || _pageCount <= 0)
        {
            _error = "Aucun PDF chargé.";
            return;
        }

        int[] order;
        try
        {
            order = ParseOrder(_orderInput, _pageCount);
        }
        catch (Exception ex)
        {
            _error = ex.Message;
            return;
        }

        _isBusy = true;
        try
        {
            await ReorderTool.ReorderAndDownloadAsync(_pdfBytes, order, "reordered.pdf");
        }
        catch (Exception ex)
        {
            _error = $"Erreur pendant le réordonnage: {ex.Message}";
        }
        finally
        {
            _isBusy = false;
        }
    }

    private static int[] ParseOrder(string input, int pageCount)
    {
        if (string.IsNullOrWhiteSpace(input))
            throw new Exception("Entre un ordre complet, ex: 3,1,2,4.");

        input = input.Replace(" ", "");
        var parts = input.Split(',', StringSplitOptions.RemoveEmptyEntries);

        if (parts.Length != pageCount)
            throw new Exception($"Tu dois fournir exactement {pageCount} nombres (un par page).");

        var order = new int[pageCount];
        var seen = new bool[pageCount + 1];

        for (int i = 0; i < pageCount; i++)
        {
            if (!int.TryParse(parts[i], out var p))
                throw new Exception($"Valeur invalide: '{parts[i]}'");

            if (p < 1 || p > pageCount)
                throw new Exception($"Page hors limites (1 - {pageCount}): {p}");

            if (seen[p])
                throw new Exception($"Page dupliquée: {p}");

            seen[p] = true;
            order[i] = p;
        }

        for (int p = 1; p <= pageCount; p++)
            if (!seen[p])
                throw new Exception($"Page manquante dans l’ordre: {p}");

        return order;
    }

    private Task OnNoopSelectedPagesChanged(int[] _)
        => Task.CompletedTask;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("pdfDrop.wireDropZone", ".dropzone-reorder", "pdfInput");
        }
    }
}