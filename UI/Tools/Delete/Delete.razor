@page "/delete"
@using Microsoft.AspNetCore.Components.Forms
@inject PDF_IT_Yourself.Services.PdfDocumentLoader Loader
@inject PDF_IT_Yourself.Tools.Delete.DeleteTool DeleteTool

<h3>Delete Pages</h3>

<div class="mb-3">
    <label class="form-label">Choisir un PDF</label>
    <InputFile OnChange="OnFileSelected" accept="application/pdf" />
</div>

@if (_pdfLoaded)
{
    <div class="mb-2 text-muted">
        Pages détectées : @_pageCount
    </div>

    <div class="mb-3">
        <label class="form-label">Pages à supprimer</label>
        <PagePicker @key="_pickerKey"
                    PdfBytes="_pdfBytes"
                    PageCount="_pageCount"
                    IsBusy="_isBusy"
                    SelectedPages1Based="_selectedPages"
                    SelectedPages1BasedChanged="OnSelectedPagesChanged" />
    </div>

    <button class="btn btn-danger"
            @onclick="DeletePages"
            disabled="@(_isBusy || _selectedPages.Length == 0)">
        @(_isBusy ? "Suppression..." : "Supprimer & Télécharger")
    </button>

    @if (!string.IsNullOrWhiteSpace(_error))
    {
        <div class="alert alert-danger mt-3">@_error</div>
    }

    <div class="small text-muted mt-2">
        Selected: @string.Join(", ", _selectedPages)
    </div>
}
else
{
    <div class="text-muted">Charge un PDF pour commencer.</div>
}

@code {
    private byte[]? _pdfBytes;
    private int _pageCount;
    private bool _pdfLoaded;
    private bool _isBusy;

    private int[] _selectedPages = Array.Empty<int>();
    private string _error = "";

    // Important: change this to force re-create PagePicker when pdf changes
    private string _pickerKey = Guid.NewGuid().ToString("N");

    private async Task OnFileSelected(InputFileChangeEventArgs e)
    {
        _error = "";
        _pdfLoaded = false;
        _isBusy = false;

        _pdfBytes = null;
        _pageCount = 0;
        _selectedPages = Array.Empty<int>();

        // Force re-create PagePicker (cleans JS state, selection, thumbnails, etc.)
        _pickerKey = Guid.NewGuid().ToString("N");

        var file = e.File;
        if (file is null) return;

        try
        {
            using var stream = file.OpenReadStream(maxAllowedSize: 50 * 1024 * 1024); // 50MB
            using var ms = new MemoryStream();
            await stream.CopyToAsync(ms);
            _pdfBytes = ms.ToArray();

            _pageCount = await Loader.GetValidatedPageCountAsync(_pdfBytes);

            // IMPORTANT: reset sélection selon le nouveau pdf
            _selectedPages = Array.Empty<int>();

            // force recréer le composant
            _pickerKey = Guid.NewGuid().ToString("N");

            _pdfLoaded = true;

        }
        catch (Exception ex)
        {
            _error = $"Erreur chargement PDF : {ex.Message}";
            _pdfLoaded = false;
            _pdfBytes = null;
            _pageCount = 0;
        }
    }

    private async Task DeletePages()
    {
        _error = "";

        if (_pdfBytes is null || _pageCount <= 0)
        {
            _error = "Aucun PDF chargé.";
            return;
        }

        // sanitize selection (avoid duplicates + out of range)
        var pages = _selectedPages
            .Where(p => p >= 1 && p <= _pageCount)
            .Distinct()
            .OrderBy(p => p)
            .ToArray();

        if (pages.Length == 0)
        {
            _error = "Sélectionne au moins une page à supprimer.";
            _selectedPages = Array.Empty<int>();
            return;
        }

        if (pages.Length == _pageCount)
        {
            _error = "Tu as sélectionné toutes les pages. Le PDF résultat serait vide.";
            return;
        }

        _isBusy = true;
        try
        {
            await DeleteTool.DeleteAndDownloadAsync(_pdfBytes, pages, "deleted.pdf");

            // Optionnel: après téléchargement, tu peux clear selection
            _selectedPages = Array.Empty<int>();
        }
        catch (Exception ex)
        {
            _error = $"Erreur pendant la suppression : {ex.Message}";
        }
        finally
        {
            _isBusy = false;
        }
    }
    private Task OnSelectedPagesChanged(int[] pagesFromPicker)
    {
        pagesFromPicker ??= Array.Empty<int>();

        // Si on voit un 0, c'est quasi sûr que c'est du 0-based
        var isZeroBased = pagesFromPicker.Any(p => p == 0);

        var pages1Based = isZeroBased
            ? pagesFromPicker.Select(p => p + 1)
            : pagesFromPicker;

        _selectedPages = pages1Based
            .Where(p => p >= 1 && p <= _pageCount)
            .Distinct()
            .OrderBy(p => p)
            .ToArray();

        _error = "";
        return Task.CompletedTask;
    }
}